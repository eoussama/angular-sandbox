{
  "name": "angular-sandbox",
  "version": "0.1.0",
  "scripts": {
    "ng": "ng",
    "clean": "rm -rf .angular",
    "start": "npm run clean && ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "jest --no-cache",
    "test:watch": "jest --watch",
    "e2e": "npx cypress open",
    "cov": "jest --coverage",
    "api": "npx json-server --watch ./data/db.json",
    "doc:json": "compodoc -p ./tsconfig.json -e json -d .",
    "storybook": "npm run doc:json && ng run angular-sandbox:storybook",
    "storybook:build": "npm run doc:json && ng run angular-sandbox:build-storybook"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.0.0",
    "@angular/common": "^19.0.0",
    "@angular/compiler": "^19.0.0",
    "@angular/core": "^19.0.0",
    "@angular/forms": "^19.0.0",
    "@angular/platform-browser": "^19.0.0",
    "@angular/platform-browser-dynamic": "^19.0.0",
    "@angular/router": "^19.0.0",
    "@ngrx/effects": "^19.0.0",
    "@ngrx/store": "^19.0.0",
    "@ngrx/store-devtools": "^19.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.6.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.0.0",
    "@angular/cli": "^19.0.0",
    "@angular/compiler-cli": "^19.0.0",
    "@babel/core": "^7.26.0",
    "@compodoc/compodoc": "^1.1.25",
    "@storybook/addon-essentials": "^8.4.0",
    "@storybook/addon-interactions": "^8.4.0",
    "@storybook/addon-links": "^8.4.0",
    "@storybook/angular": "^8.4.0",
    "@storybook/blocks": "^8.4.0",
    "@storybook/test": "^8.4.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^24.10.1",
    "cypress": "^13.15.0",
    "jest": "^29.7.0",
    "jest-preset-angular": "^14.4.0",
    "json-server": "^0.17.4",
    "storybook": "^8.4.0",
    "typescript": "~5.6.0"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "maxWorkers": 4,
    "setupFilesAfterEnv": [
      "<rootDir>/src/setup.jest.ts"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_mobules/",
      "<rootDir>/dist/"
    ],
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1"
    },
    "globals": {
      "transform": {
        "<transform_regex>": [
          "ts-jest",
          {
            "tsConfig": "<rootDir>/tscondig.spec.json",
            "stringifyContentPathRegex": "\\.html$"
          }
        ]
      }
    }
  },
  "packageManager": "pnpm@9.15.4+sha512.b2dc20e2fc72b3e18848459b37359a32064663e5627a51e4c74b2c29dd8e8e0491483c3abb40789cfd578bf362fb6ba8261b05f0387d76792ed6e23ea3b1b6a0"
}

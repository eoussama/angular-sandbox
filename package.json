{
  "name": "angular-sandbox",
  "version": "0.1.0",
  "scripts": {
    "ng": "ng",
    "clean": "rm -rf .angular",
    "start": "npm run clean && ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "jest --no-cache",
    "test:watch": "jest --watch",
    "e2e": "npx cypress open",
    "cov": "jest --coverage",
    "api": "npx json-server --watch ./data/db.json",
    "docs:json": "compodoc -p ./tsconfig.json -e json -d .",
    "storybook": "npm run docs:json && start-storybook -p 6006",
    "build-storybook": "npm run docs:json && build-storybook"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^15.0.0",
    "@angular/common": "^15.0.0",
    "@angular/compiler": "^15.0.0",
    "@angular/core": "^15.0.0",
    "@angular/forms": "^15.0.0",
    "@angular/platform-browser": "^15.0.0",
    "@angular/platform-browser-dynamic": "^15.0.0",
    "@angular/router": "^15.0.0",
    "@ngrx/effects": "^15.3.0",
    "@ngrx/store-devtools": "^15.3.0",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.12.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.0.4",
    "@angular/cli": "~15.0.4",
    "@angular/compiler-cli": "^15.0.0",
    "@babel/core": "^7.21.3",
    "@compodoc/compodoc": "^1.1.19",
    "@storybook/addon-actions": "^6.5.16",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-interactions": "^6.5.16",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/angular": "^6.5.16",
    "@storybook/builder-webpack5": "^6.5.16",
    "@storybook/manager-webpack5": "^6.5.16",
    "@storybook/testing-library": "^0.0.13",
    "@types/jest": "^29.4.0",
    "babel-loader": "^8.3.0",
    "cypress": "^12.7.0",
    "jest": "^29.5.0",
    "jest-preset-angular": "^13.0.0",
    "json-server": "^0.17.2",
    "typescript": "~4.8.2"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "maxWorkers": 4,
    "setupFilesAfterEnv": [
      "<rootDir>/src/setup.jest.ts"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_mobules/",
      "<rootDir>/dist/"
    ],
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1"
    },
    "globals": {
      "transform": {
        "<transform_regex>": [
          "ts-jest",
          {
            "tsConfig": "<rootDir>/tscondig.spec.json",
            "stringifyContentPathRegex": "\\.html$"
          }
        ]
      }
    }
  }
}
